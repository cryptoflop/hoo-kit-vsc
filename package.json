{
	"name": "hoo-kit-vsc",
	"displayName": "hoo-kit",
	"description": "Official hoo-kit VSCode extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hoo-kit.start",
				"title": "Start hoo-kit",
				"icon": "$(debug-start)"
			},
			{
				"command": "hoo-kit.stop",
				"title": "Stop hoo-kit",
				"icon": "$(debug-stop)"
			},
			{
				"command": "hoo-kit.event.start",
				"title": "Start event"
			},
			{
				"command": "hoo-kit.event.stop",
				"title": "Stop event"
			}
		],
		"configuration": {
			"title": "hoo-kit",
			"properties": {
				"hoo-kit.active": {
					"type": "boolean",
					"default": true,
					"description": "Defines if hoo-kit should be active."
				},
				"hoo-kit.runOnStart": {
					"type": "boolean",
					"default": false,
					"description": "Defines if hoo-kit should be run when VSCode is started."
				},
				"hoo-kit.tasks": {
					"type": "array",
					"default": [],
					"description": "hoo-kit task declarations."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "resources/icons/logo.svg",
					"id": "hoo-kit",
					"title": "hoo-kit"
				}
			]
		},
		"views": {
			"hoo-kit": [
				{
					"id": "hoo-kit.tasks",
					"name": "Tasks",
					"when": "hoo-kit.active"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "hoo-kit.start",
					"when": "hoo-kit.running == false",
					"group": "navigation"
				},
				{
					"command": "hoo-kit.stop",
					"when": "hoo-kit.running == true",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "hoo-kit.event.start",
					"when": "viewItem.task.active"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.49.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
